# =============================================================================
# FastAPI Authentication Service Configuration
# =============================================================================

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=atrium_auth
POSTGRES_HOST_AUTH_METHOD=scram-sha-256

# Redis Configuration
REDIS_PASSWORD=changeme

# OAuth Providers
# GitHub OAuth App (https://github.com/settings/applications/new)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth App (https://console.developers.google.com/)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application URLs
FRONTEND_URL=https://www.tectel.com.uy
BACKEND_URL=http://localhost:8008
WEBSITE_URL=https://www.tectel.com.uy

# API Security
API_TOKEN=changeme

# Backup Users (JSON format)
# Example: [{"username": "admin", "password": "secure_password", "email": "admin@example.com"}]
BACKUP_USERS=[]

# Logging Configuration
ENABLE_REQUEST_LOGGING=true
LOG_LEVEL=INFO